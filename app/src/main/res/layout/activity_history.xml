<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0pt"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="50.0pt"
            android:layout_marginLeft="60.0pt"
            android:drawableLeft="@drawable/search_line"
            android:drawablePadding="10.0pt"
            android:gravity="center"
            android:text="历史记录"
            android:textColor="@android:color/white"
            android:textSize="24.0pt"
            android:textStyle="bold" />

        <Space
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/tvDelTip"
            android:layout_width="wrap_content"
            android:layout_height="40.0pt"
            android:layout_gravity="center"
            android:layout_marginRight="10.0pt"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="确定键删除当前选中记录"
            android:textColor="@android:color/white"
            android:textSize="24.0pt"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDel"
            android:layout_width="160.0pt"
            android:layout_height="40.0pt"
            android:layout_gravity="center"
            android:layout_marginRight="60.0pt"
            android:background="@drawable/source_focus"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="删除记录"
            android:textColor="@android:color/white"
            android:textSize="24.0pt" />

    </LinearLayout>

    <com.tv.leanback.HorizontalGridView
        android:id="@id/mGridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="70.0pt"
        android:paddingLeft="60.0pt"
        android:paddingTop="30.0pt"
        android:paddingRight="60.0pt"
        android:paddingBottom="30.0pt"
        app:tv_horizontalSpacingWithMargins="20.0pt"
        app:tv_selectedItemIsCentered="true"
        app:tv_verticalSpacingWithMargins="30.0pt" />

</FrameLayout>