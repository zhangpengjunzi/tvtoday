<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@id/llLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/topLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="60.0pt"
            android:paddingTop="40.0pt"
            android:paddingRight="60.0pt">

            <ImageView
                android:id="@+id/ivThumb"
                android:layout_width="224.0pt"
                android:layout_height="315.0pt"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="310.0pt"
                android:layout_marginLeft="20.0pt"
                android:orientation="vertical">

                <TextView
                    android:id="@id/tvName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="24.0pt" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0pt"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_CCFFFFFF"
                        android:textSize="18.0pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0pt"
                        android:layout_marginRight="5.0pt"
                        android:text="丨"
                        android:textColor="@color/color_CCFFFFFF"
                        android:textSize="18.0pt" />

                    <TextView
                        android:id="@+id/tvYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_CCFFFFFF"
                        android:textSize="18.0pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0pt"
                        android:layout_marginRight="5.0pt"
                        android:text="丨"
                        android:textColor="@color/color_CCFFFFFF"
                        android:textSize="18.0pt" />

                    <TextView
                        android:id="@+id/tvArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_CCFFFFFF"
                        android:textSize="18.0pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0pt"
                        android:layout_marginRight="5.0pt"
                        android:text="丨"
                        android:textColor="@color/color_CCFFFFFF"
                        android:textSize="18.0pt" />

                    <TextView
                        android:id="@+id/tvLang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_CCFFFFFF"
                        android:textSize="18.0pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0pt"
                        android:layout_marginRight="5.0pt"
                        android:text="丨"
                        android:textColor="@color/color_CCFFFFFF"
                        android:textSize="18.0pt" />

                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_CCFFFFFF"
                        android:textSize="18.0pt" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvActor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0pt"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/color_CCFFFFFF"
                    android:textSize="18.0pt" />

                <TextView
                    android:id="@+id/tvDirector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0pt"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/color_CCFFFFFF"
                    android:textSize="18.0pt" />

                <TextView
                    android:id="@+id/tvDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0pt"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="4"
                    android:textColor="@color/color_CCFFFFFF"
                    android:textSize="18.0pt" />

                <androidx.legacy.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="0.0pt"
                    android:layout_weight="1.0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2.0pt"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@id/tvPlay"
                        android:layout_width="120.0pt"
                        android:layout_height="44.0pt"
                        android:layout_marginRight="10.0pt"
                        android:background="@drawable/detail_play_focus"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:text="立即播放"
                        android:textColor="@android:color/white"
                        android:textSize="20.0pt" />

                    <TextView
                        android:id="@+id/tvQuickSearch"
                        android:layout_width="120.0pt"
                        android:layout_height="44.0pt"
                        android:background="@drawable/detail_quick_search_focus"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:text="快速搜索"
                        android:textColor="@android:color/white"
                        android:textSize="20.0pt" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.owen.tvrecyclerview.widget.TvRecyclerView
            android:id="@+id/mGridViewFlag"
            android:layout_width="fill_parent"
            android:layout_height="40.0pt"
            android:layout_marginLeft="60.0pt"
            android:layout_marginTop="10.0pt"
            android:layout_marginRight="60.0pt"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:tv_horizontalSpacingWithMargins="20.0pt"
            app:tv_selectedItemIsCentered="true" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="60.0pt"
            android:layout_marginTop="10.0pt"
            android:layout_marginRight="60.0pt"
            android:layout_marginBottom="30.0pt">

            <com.owen.tvrecyclerview.widget.TvRecyclerView
                android:id="@+id/mGridView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:tv_horizontalSpacingWithMargins="10.0pt"
                app:tv_selectedItemIsCentered="true"
                app:tv_verticalSpacingWithMargins="10.0pt" />


            <LinearLayout
                android:id="@+id/submitLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1F1F1F"
                android:gravity="center">

                <TextView
                    android:id="@+id/submitBtn"
                    android:layout_width="180.0pt"
                    android:layout_height="66.0pt"
                    android:layout_marginRight="10.0pt"
                    android:background="@drawable/detail_play_focus"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="意见反馈"
                    android:textColor="@android:color/white"
                    android:textSize="20.0pt" />
            </LinearLayout>
        </FrameLayout>


    </LinearLayout>

</FrameLayout>