<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.bt.jrsdk.activity.InteractionAdActivity">

    <!--    <View-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_weight="1" />-->

    <FrameLayout
        android:layout_width="@dimen/interaction_width"
        android:layout_height="@dimen/interaction_height"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_interaction"
            android:layout_width="@dimen/interaction_width"
            android:layout_height="@dimen/interaction_height"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/back_interaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginTop="10pt"
            android:layout_marginEnd="10pt"
            android:background="@drawable/shape_jump"
            android:gravity="center"
            android:minWidth="160pt"
            android:minHeight="50pt"
            android:text="按返回键关闭"
            android:textSize="18pt"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_video_close"
            android:layout_width="@dimen/ad_image_close"
            android:layout_height="@dimen/ad_image_close"
            android:layout_gravity="top|right"
            android:layout_marginTop="10pt"
            android:layout_marginEnd="10pt"
            android:alpha="0.6"
            android:scaleType="fitCenter"
            android:visibility="gone" />
    </FrameLayout>

    <!--    <View-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_weight="1" />-->

</LinearLayout>