<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30pt">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:focusableInTouchMode="false"
        android:text="今日影视激活"
        android:textColor="@color/black"
        android:textSize="25pt" />

    <com.upa.activation.LQREditText
        android:id="@+id/activation_text"
        android:layout_width="400pt"
        android:layout_height="50pt"
        android:layout_gravity="center"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="20pt"
        android:layout_marginRight="10pt"
        android:layout_marginBottom="20pt"
        android:background="@drawable/edit_bg_focus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:hint="请输入激活码"
        android:inputType="text"
        android:nextFocusDown="@id/activation_button"
        android:textColor="@color/black"
        android:textColorHint="#ff636161"
        android:textSize="25pt" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activation_button"
            android:layout_width="150pt"
            android:layout_height="40pt"
            android:background="@drawable/button_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:nextFocusUp="@id/activation_text"
            android:text="激活"
            android:textColor="@color/black"
            android:textSize="25pt" />

        <ProgressBar
            android:id="@+id/activation_bar"
            style="?android:progressBarStyleInverse"
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:layout_gravity="center"
            android:focusable="false"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>