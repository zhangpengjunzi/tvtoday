<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="600.0pt"
    android:layout_height="400.0pt"
    android:layout_gravity="center"
    android:background="@drawable/model_dialog_bugly_bg"
    android:orientation="vertical"
    android:padding="20.0pt">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30.0pt"
        android:layout_margin="5.0pt"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="确定键锁定分类，上下左右调整顺序，再次确定键结束调整"
        android:textColor="@android:color/white"
        android:textSize="18.0pt" />

    <com.owen.tvrecyclerview.widget.TvRecyclerView
        android:id="@id/mGridView"
        android:layout_width="600.0pt"
        android:layout_height="370.0pt"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:tv_horizontalSpacingWithMargins="5.0pt"
        app:tv_selectedItemIsCentered="true"
        app:tv_verticalSpacingWithMargins="5.0pt" />
</LinearLayout>