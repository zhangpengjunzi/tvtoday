<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="428.0pt"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60.0pt"
            android:layout_marginTop="30.0pt"
            android:drawableLeft="@drawable/search_line"
            android:drawablePadding="10.0pt"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@android:color/white"
            android:textSize="24.0pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="308.0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60.0pt"
            android:layout_marginTop="20.0pt"
            android:layout_marginRight="60.0pt"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="fill_parent"
                android:layout_height="50.0pt"
                android:background="@drawable/search"
                android:hint="请输入影片名称"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10.0pt"
                android:paddingRight="10.0pt"
                android:textColor="@android:color/white"
                android:textColorHint="#99ffffff"
                android:textSize="20.0pt" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0pt"
                android:layout_marginTop="20.0pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/tvSearch"
                    android:layout_width="0.0pt"
                    android:layout_height="50.0pt"
                    android:layout_weight="1.0"
                    android:background="@drawable/search_focus"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="搜索"
                    android:textColor="@android:color/white"
                    android:textSize="20.0pt" />

                <Space
                    android:layout_width="10.0pt"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvClear"
                    android:layout_width="0.0pt"
                    android:layout_height="50.0pt"
                    android:layout_weight="1.0"
                    android:background="@drawable/search_focus"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="清空"
                    android:textColor="@android:color/white"
                    android:textSize="20.0pt" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="300.0pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20.0pt"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.4"
            android:textColor="@android:color/white"
            android:textSize="20.0pt" />

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="300.0pt"
            android:layout_height="300.0pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20.0pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20.0pt"
        android:layout_marginRight="60.0pt"
        android:orientation="vertical"
        android:paddingTop="30.0pt">

        <TextView
            android:id="@id/tvName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24.0pt" />

        <com.owen.tvrecyclerview.widget.TvRecyclerView
            android:id="@id/mGridView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10.0pt"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="30.0pt"
            android:visibility="invisible"
            app:tv_horizontalSpacingWithMargins="5.0pt"
            app:tv_selectedItemIsCentered="true"
            app:tv_verticalSpacingWithMargins="5.0pt" />
    </LinearLayout>
</LinearLayout>