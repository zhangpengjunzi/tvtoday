<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context="com.bt.jrsdk.activity.VideoActivity">

    <FrameLayout
        android:layout_width="@dimen/interaction_width"
        android:layout_height="@dimen/interaction_height"
        android:gravity="center">

        <com.aliyun.player.alivcplayerexpand.widget.AliyunVodPlayerView
            android:id="@+id/video_ad"
            android:layout_width="@dimen/interaction_width"
            android:layout_height="@dimen/interaction_height" />


        <ImageView
            android:id="@+id/img_video_cover"
            android:layout_width="@dimen/interaction_width"
            android:layout_height="@dimen/interaction_height"
            android:focusable="false"
            android:visibility="visible"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/back_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginTop="10pt"
            android:layout_marginEnd="10pt"
            android:background="@drawable/shape_jump"
            android:gravity="center"
            android:minWidth="160pt"
            android:minHeight="50pt"
            android:visibility="gone"
            android:text="按返回键关闭"
            android:textSize="18pt" />


        <ImageView
            android:id="@+id/img_video_close"
            android:layout_width="@dimen/ad_image_close"
            android:layout_height="@dimen/ad_image_close"
            android:layout_gravity="top|right"
            android:layout_marginTop="10pt"
            android:layout_marginEnd="10pt"
            android:alpha="0.6"
            android:scaleType="fitCenter"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>