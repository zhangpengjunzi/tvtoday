<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    tools:context="com.bt.jrsdk.activity.VideoActivity">

    <xyz.doikki.videoplayer.player.VideoView
        android:id="@+id/video_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/img_video_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitXY" />


    <ImageView
        android:id="@+id/img_video_close"
        android:layout_width="@dimen/ad_image_close"
        android:layout_height="@dimen/ad_image_close"
        android:layout_gravity="top|right"
        android:layout_marginTop="10pt"
        android:layout_marginEnd="10pt"
        android:alpha="0.6"
        android:scaleType="fitCenter"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginTop="10pt"
        android:layout_marginRight="10pt"
        android:background="@drawable/shape_jump"
        android:gravity="center"
        android:minWidth="120pt"
        android:minHeight="50pt"
        android:textSize="18pt"
        android:visibility="gone" />

</FrameLayout>