<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/center_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginRight="20.0dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/video_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/play_mobile_center_shape"
            android:gravity="center"
            android:minWidth="50.0dip"
            android:padding="5.0dip"
            android:text="16:9"
            android:textColor="@android:color/white"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/video_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/play_mobile_center_shape"
            android:gravity="center"
            android:minWidth="50.0dip"
            android:padding="5.0dip"
            android:text="x1"
            android:textColor="@android:color/white"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dkplayer_controller_height"
        android:layout_gravity="bottom"
        android:background="@drawable/dkplayer_shape_stardard_controller_bottom_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/dkplayer_controller_height"
            android:layout_height="@dimen/dkplayer_controller_height"
            android:padding="@dimen/dkplayer_controller_icon_padding"
            android:src="@drawable/dkplayer_selector_play_button" />

        <TextView
            android:id="@+id/curr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dkplayer_controller_time_text_size" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@null"
            android:max="1000"
            android:maxHeight="2.0dip"
            android:minHeight="2.0dip"
            android:progressDrawable="@drawable/dkplayer_layer_progress_bar"
            android:thumb="@drawable/dkplayer_seekbar_thumb"
            android:thumbOffset="0.0dip" />

        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dkplayer_controller_icon_padding"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dkplayer_controller_time_text_size" />

        <TextView
            android:id="@+id/play_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dkplayer_controller_icon_padding"
            android:background="@android:color/transparent"
            android:text="上一集"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dkplayer_controller_time_text_size" />

        <TextView
            android:id="@+id/play_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dkplayer_controller_icon_padding"
            android:background="@android:color/transparent"
            android:text="下一集"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dkplayer_controller_time_text_size" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/bottom_progress"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_gravity="bottom"
        android:max="1000"
        android:progressDrawable="@drawable/dkplayer_layer_progress_bar"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/tv_info_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/simon_controller_top_bg"
        android:orientation="horizontal"
        android:paddingLeft="12.0pt"
        android:paddingTop="10.0pt"
        android:paddingRight="12.0pt"
        android:paddingBottom="10.0pt">

        <TextView
            android:id="@+id/tv_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="http://"
            android:textColor="@android:color/white"
            android:textSize="24.0pt" />

        <TextView
            android:id="@+id/tv_info_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="按上下键可以换集"
            android:textColor="@android:color/white"
            android:textSize="24.0pt" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/tv_pause_container"
        android:layout_width="320.0pt"
        android:layout_height="240.0pt"
        android:layout_gravity="center"
        android:background="@drawable/model_dialog_bg"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="120.0pt"
            android:layout_height="120.0pt"
            android:layout_gravity="center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/ic_play" />

        <TextView
            android:id="@+id/tv_pause_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20.0pt"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@android:color/white"
            android:textSize="30.0pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_progress_container"
        android:layout_width="320.0pt"
        android:layout_height="240.0pt"
        android:layout_gravity="center"
        android:background="@drawable/model_dialog_bg"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/tv_progress_icon"
            android:layout_width="120.0pt"
            android:layout_height="120.0pt"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:id="@+id/tv_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20.0pt"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@android:color/white"
            android:textSize="30.0pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_bottom_container"
        android:layout_width="fill_parent"
        android:layout_height="80.0pt"
        android:layout_gravity="bottom"
        android:background="@drawable/play_bottom_shape"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_play_next"
            android:layout_width="100.0pt"
            android:layout_height="40.0pt"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0pt"
            android:layout_marginRight="6.0pt"
            android:background="@drawable/source_focus"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:paddingLeft="5.0pt"
            android:paddingRight="5.0pt"
            android:singleLine="true"
            android:text="下一集"
            android:textColor="@android:color/white"
            android:textSize="22.0pt" />

        <TextView
            android:id="@+id/tv_play_pre"
            android:layout_width="100.0pt"
            android:layout_height="40.0pt"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6.0pt"
            android:background="@drawable/source_focus"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:paddingLeft="5.0pt"
            android:paddingRight="5.0pt"
            android:singleLine="true"
            android:text="上一集"
            android:textColor="@android:color/white"
            android:textSize="22.0pt" />

        <TextView
            android:id="@+id/tv_video_speed"
            android:layout_width="100.0pt"
            android:layout_height="40.0pt"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6.0pt"
            android:background="@drawable/source_focus"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:paddingLeft="5.0pt"
            android:paddingRight="5.0pt"
            android:singleLine="true"
            android:text="x1"
            android:textColor="@android:color/white"
            android:textSize="22.0pt" />

        <TextView
            android:id="@+id/tv_video_size"
            android:layout_width="100.0pt"
            android:layout_height="40.0pt"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6.0pt"
            android:background="@drawable/source_focus"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:paddingLeft="5.0pt"
            android:paddingRight="5.0pt"
            android:singleLine="true"
            android:text="16:9"
            android:textColor="@android:color/white"
            android:textSize="22.0pt" />
    </LinearLayout>
</FrameLayout>